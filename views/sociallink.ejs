<div class="row mt-7">
  <div class="col-md-9 m-auto">
    <div class="card card-body" style="padding-bottom: 0px;">
      <div class="text-center">
        <h1 id="in" class="mt-4"><%=linkInfo.song_title%></h1>
      </div>
      <!-- Buttons -->

      <!-- Forms -->
      <form action="/social-link/save/<%=linkInfo.id%>" method="POST">
        <div class="row">
          <div class="col-sm text-right">
            <button type="submit" class="btn btn-light">Save</button>
          </div>
          <div class="col-sm text-center">
            <a href="/campaigns" class="btn btn-secondary">Campaigns</a>
          </div>
          <div class="col-sm text-center">
            <a
              target="_blank"
              href="/social-link/view/<%=linkInfo.id%>"
              class="btn btn-secondary"
              >Open in new tab</a
            >
          </div>
          <div class="col-sm text-left">
            <button
              type="button"
              class="btn btn-secondary"
              data-toggle="modal"
              data-target="#exampleModalCenter"
            >
              Delete
            </button>
          </div>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Song title</label>
          <input
            onkeyup="changeText()"
            name="song_title"
            value="<%=linkInfo.song_title%>"
            class="form-control"
            id="s_title"
            placeholder="SG Lewis - Blue (liiusion remix)"
            required
          />
        </div>
        <div class="form-group">
          <label for="inputState">Unlock type</label>
          <select name="unlock_type" id="<%=linkInfo.unlock_type%>" class="form-control" required>
            <option class="unlock_type">Download file</option>
            <option class="unlock_type">Secret link</option>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Unlock button text</label>
          <input
            name="unlock_button_text"
            value="<%=linkInfo.unlock_button_text%>"
            class="form-control"
            id="exampleFormControlInput1"
            placeholder="liiusion"
            required
          />
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Image address</label>
          <input
            name="image_path"
            value="<%=linkInfo.image_path%>"
            class="form-control"
            id="exampleFormControlInput1"
            placeholder="Paste image link here"
            required
          />
        </div>
        <div class="form-group">
            <label for="inputState">Social network</label>
            <select name="social_network" id="<%=linkInfo.social_network%>" class="form-control" required>
              <option class="SoundCloud">SoundCloud</option>
              <option class="Facebook">Facebook</option>
              <option class="Instagram">Instagram</option>
              <option class="Spotify">Spotify</option>
            </select>
          </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Social network link</label>
          <input
            name="social_network_link"
            value="<%=linkInfo.social_network_link%>"
            class="form-control"
            id="exampleFormControlInput1"
            placeholder="Leave empty if not required"
          />
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Unlocked link</label>
          <input
            name="unlocked_link"
            value="<%=linkInfo.unlocked_link%>"
            class="form-control"
            id="exampleFormControlInput1"
            placeholder="Leave empty if not required"
          />
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1"
            >Something about song or artist personal message</label
          >
          <textarea
            name="personal_message"
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="3"
          >
<%=linkInfo.personal_message%></textarea
          >
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModalCenter"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">
          Confirm your action
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this link campaign?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Cancel
        </button>
        <a
          href="/social-link/delete/<%=linkInfo.id%>"
          type="button"
          class="btn btn-primary"
          >Delete</a
        >
      </div>
    </div>
  </div>
</div>

<script>
    function changeText() {
        let text = document.getElementById("s_title").value;
      document.getElementById("in").innerText = text == "" ? "New Social Link": text;
    }
    let unlock_type = document.getElementsByName("unlock_type")[0].id;
    let social_network = document.getElementsByName("social_network")[0].id;
    let numberOfOptionTag = unlock_type == "Download file" ? 0 : 1;
    document.getElementsByClassName("unlock_type")[numberOfOptionTag].setAttribute("selected", "");
    document.getElementsByClassName(social_network)[0].setAttribute("selected", "");
    

    // document.getElementsByClassName(social_network)[0].setAttribute('selected', '');
    
  </script>